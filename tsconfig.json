{
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext",
    "moduleResolution": "node",
    "types": ["node"],
    "jsx": "react",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedParameters": true,
    "declaration": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts", "index.js", "src/types.d.ts", "src/index.js"]
}
